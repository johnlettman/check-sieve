# top-most EditorConfig file
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = unset

[*.{c,h,cpp,hpp,cc,hh}]
indent_style = space
indent_size = 2  # Google style guide

[*.json]
indent_style = space
indent_size = 2
