{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "preLaunchTask": "build",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/check-sieve",
      "args": [
        "${workspaceFolder}/test/mock/sample-flagging.sieve"
      ],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
